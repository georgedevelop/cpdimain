<p id="notice"><%= notice %></p>

<h2>Roles</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Name</th>
        <th>Policy</th>
      </tr>
    </thead>

    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td><%= role.name %></td>
          <td><%= role.policies.map(&:name) %></td>
          <td><%= link_to 'Show', role %> | <%= link_to 'Edit', edit_role_path(role) %> | <%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

