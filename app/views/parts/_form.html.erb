<div class="row">
  <div class="col-md-6">
    <%= form_with(model: part) do |form| %>
      <% if part.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(part.errors.count, "error") %> prohibited this part from being saved:</h2>

          <ul>
            <% part.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= form.label :main_image %>
        <%= form.file_field :main_image, class: "form-control-file" %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :location %>
        <%= form.text_field :location, class: "form-control", data: {behavior: "autocomplete-location"} %>
      </div>

      <div class="form-group">
        <%= form.label :quantity %>
        <%= form.number_field :quantity, class: "form-control" %>
      </div>

     
      <div class="form-group">
        <%= form.label :mfr_number %>
        <%= form.text_field :mfr_number, class: "form-control", data: {behavior: "autocomplete"} %>
      </div>

      <div class="form-group">
        <%= form.label :barcode %>
        <%= form.text_field :barcode, class: "form-control", data: {behavior: "autocomplete-barcode"}  %>
      </div>

      <div class="form-group">
        <%= form.label :machine %>
        <%= form.text_field :machine, class: "form-control", data: {behavior: "autocomplete-machine"} %>
      </div>

      <div class="form-group">
        <%= form.label :vendors %>
        <%= form.select :vendor_ids, options_for_vendor, {}, {:multiple => true, class: "form-control" } %>
      </div>

      <div class="actions">
        <%= form.submit "Submit", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
